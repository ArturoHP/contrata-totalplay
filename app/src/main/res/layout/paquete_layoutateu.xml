                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="RECIBE AL MES 6"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textSize="16dp"
                    android:textStyle="bold"
